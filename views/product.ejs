<%- include('parts/header') %>
<%- include('parts/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">

            <% if (validationErrors) { %>
                <p class="alert alert-danger">
                  <%= validationErrors.msg %>
                </p>
              <% } %>

            <img src="/<%= product.image %>" class="img-fluid" alt="<%= product.name %>">   


            <form action="/cart" method="POST">
                <div class="mb-3">
                    <label for="amount" class="form-label">Amount:</label>
                    <input type="number" name="amount" id="amount" class="form-control" min="1" value="1" required>
                </div>
                <input type="hidden" name="name" value="<%= product.name %>">
                <input type="hidden" name="price" value="<%= product.price %>">
                <input type="hidden" name="productId" value="<%= product.productId %>">
                <input type="hidden" name="redirectTo" value="/product/ product._id ">
                <button type="submit" class="btn btn-primary"> Add to Cart</button>
            </form>

        </div>
        <div class="col-12 col-md-6">
            <h3><%= product.name %></h3>
            <h5 class="text-muted"><%= product.category %></h5>
            <hr>
            <p><%= product.description %></p>
            <hr>
            <h5 class="text-success">Price: <%= product.price %> $</h5>
        </div>
    </div>
</div>

<%- include('parts/footer') %>
